#!/bin/sh

homepath=$(cd `dirname $0`; pwd)

VERSION=0.6.0
INSTALL=${homepath}/setup

if [ ! -f yaml-cpp-${VERSION}.tar.gz ]; then
   wget https://github.com/jbeder/yaml-cpp/archive/refs/tags/yaml-cpp-${VERSION}.tar.gz
fi
if [ ! -d ./yaml-cpp-yaml-cpp-${VERSION} ]; then
  tar -zxvf yaml-cpp-${VERSION}.tar.gz
fi

cd yaml-cpp-yaml-cpp-${VERSION}

mkdir build
cd build
cmake -DCMAKE_INSTALL_PREFIX=${INSTALL} -DBUILD_SHARED_LIBS="ON" -DCMAKE_C_FLAGS="-fPIC" -DCMAKE_CXX_FLAGS="-fPIC" ../
make && make install

cd ../
rm -rf build

mkdir build
cd build
cmake -DCMAKE_INSTALL_PREFIX=${INSTALL} -DCMAKE_C_FLAGS="-fPIC" -DCMAKE_CXX_FLAGS="-fPIC" ../
make && make install

cd ${homepath}

rm -rf yaml-cpp-yaml-cpp-${VERSION}