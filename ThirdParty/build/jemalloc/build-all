#!/bin/sh

homepath=$(cd `dirname $0`; pwd)

if [ ! -f jemalloc-5.2.1.tar.bz2 ]; then
  wget https://github.com/jemalloc/jemalloc/releases/download/5.2.1/jemalloc-5.2.1.tar.bz2
fi
if [ ! -d ./jemalloc-5.2.1 ]; then
  tar -jxvf jemalloc-5.2.1.tar.bz2
fi

cd jemalloc-5.2.1

./autogen.sh --prefix=/dave/tools/jemalloc CFLAGS="-fPIC" CXXFLAGS="-fPIC"

make && make install

cd $homepath

rm -rf setup
mkdir setup
cp -r /dave/tools/jemalloc/* ./setup

rm -rf jemalloc-5.2.1