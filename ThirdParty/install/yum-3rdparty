#!/bin/sh

timedatectl set-timezone Asia/Shanghai

wget -O /etc/yum.repos.d/CentOS-Base.repo http://mirrors.aliyun.com/repo/Centos-7.repo
yum clean all
yum makecache

yum -y update

yum -y groupinstall "Development Tools"

yum -y install zlib zlib-devel bzip2 bzip2-devel ncurses openssl openssl-devel openssl-static xz xz-devel lzma sqlite sqlite-devel gdbm gdbm-devel tk tk-devel libffi-devel

yum -y install expat-devel

yum -y install openssl-devel

yum -y install apr-devel apr apr-util

yum -y install curl

yum -y install curl-devel

yum -y install psmisc

yum -y install telnet

yum -y install cmake

yum -y install automake

yum -y install sshpass

yum -y install expect

yum -y install vim

yum -y install libxml2-devel.x86_64

yum -y install pciutils

yum -y install epel-release

yum -y install redis
systemctl start redis
systemctl enable redis.service

yum -y install c-ares-devel

yum -y install python-pip python-devel

yum -y install python-imaging

yum -y install lsof

yum -y install ipsec-tools

yum -y install libffi-devel

yum -y install gtk3

yum -y install doxygen

yum -y install setuptool

yum -y install p7zip

yum -y install bzip2-devel

yum -y install htop

yum -y install mesa-libGL.x86_64

yum -y install mesa-libGL-devel.x86_64

yum -y install mesa-libGLU.x86_64

yum -y install mesa-libGLU-devel.x86_64

yum -y install mesa-libGLw.x86_64

yum -y install mesa-libGLw-devel.x86_64

yum -y install glew.x86_64

yum -y install glew-devel.x86_64

yum -y install freeglut.x86_64

yum -y install freeglut-devel.x86_64

yum -y install libedit.x86_64

yum -y install java-11-openjdk*

yum -y install boost

yum -y install boost-devel

yum -y install centos-release-scl

yum -y install perl-Digest-MD5

yum -y install ruby

yum -y install docker
systemctl start docker
systemctl enable docker

distribution=$(. /etc/os-release;echo $ID$VERSION_ID)
curl -s -L https://nvidia.github.io/nvidia-docker/$distribution/nvidia-docker.repo | sudo tee /etc/yum.repos.d/nvidia-docker.repo
yum install -y nvidia-container-toolkit
systemctl restart docker

yum -y install libssh2-devel

yum -y install bzip2