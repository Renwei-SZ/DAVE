PROJECT=${PWD##*/}
FINDDEBUG=0

if [ "$USER" == "root" ]; then
   PROJECTNAME=${PROJECT}
else
   PROJECTNAME=${PROJECT}-${USER}
fi

if [ -f ../../../../Deploy/deploy/${PROJECT}/debug.sh ]; then
   cd ../../../../Deploy/deploy/${PROJECT}/
   FINDDEBUG=1
elif [ -f ../../../Deploy/deploy/${PROJECT}/debug.sh ]; then
   cd ../../../Deploy/deploy/${PROJECT}/
   FINDDEBUG=1
elif [ -f ../../Deploy/deploy/${PROJECT}/debug.sh ]; then
   cd ../../Deploy/deploy/${PROJECT}/
   FINDDEBUG=1
fi

if [ ${FINDDEBUG} == 1 ]; then
   echo debug $PROJECTNAME
   chmod a+x *.sh
   ./debug.sh $PROJECTNAME
fi